<style>
    .cover {
        width: 77%;
        max-width: unset;
    }
</style>

<div class="modal fade" id="viewCameraModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog cover" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLongTitle">Camera {{camera.code}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-container">
                    <canvas id="video"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/javascripts/jsmpeg/jsmpeg.min.js"></script>
