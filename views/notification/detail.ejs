<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
<style>
.card-profile {
  margin-top: 30px;
  text-align: center;
}

.card-profile .noti-card {
  margin: -50px auto 0;
  border-radius: 5px;
  width: 360px;
  height: 290px;
  overflow: hidden;
  padding: 0;
  box-shadow: 0 16px 38px -12px rgba(0, 0, 0, 0.56), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);
}

.card-profile .noti-card img {
  width: 100%;
  height: 100%;
}
</style>
<p id="notificationId" ng-hide="true"><%= notificationId %></p>
<div class="container-fluid" ng-controller="detailController">
    <div class="row flex">
        <div class="col-md-12 d-flex justify-content-around">
            <div class="col-md-5 card card-profile">
                <div class="noti-card">
                    <a href="#">
                        <img class="img" src="{{notification.image || '/images/logo/tree-avatar.jpg'}}" />
                    </a>
                </div>
            </div>
            <br/>
            <div class="col-md-5 card card-profile">
                <div class="noti-card">
                    <a href="#">
                        <img class="img" src="{{notification.imageDetected || '/images/logo/tree-avatar.jpg'}}" />
                    </a>
                </div>
            </div>
        </div>
    </div>
        <div class="col-md-12 mg-0-auto">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title"><%= title %></h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Ngày cập nhật</label>
                                    <input type="text" class="form-control"
                                        value="{{notification.createdTime | date:'dd/MM/yyyy HH:mm:ss'}}" disabled>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Nội dung</label>
                                    <input type="text" class="form-control" value="{{notification.name}}" disabled>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Trạng thái xử lý</label>
                                    <input type="text" class="form-control" value="{{notification.status}}" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="note">Diễn tả</label>
                                    <textarea type="text" rows="3" class="form-control" ng-model="notification.name"
                                        ng-disabled="isNotEditing"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- <div ng-show="isNotEditing" ng-hide="bill.status === 'PAID'">
