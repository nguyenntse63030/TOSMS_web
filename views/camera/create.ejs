</style>
<div class="container-fluid" ng-controller="createController">
  <div class="row flex">
    <div class="display col-md-10 mg-0-auto">
      <div class="card">
        <div class="card-header card-header-primary">
          <h4 class="card-title">Tạo Mới Camera</h4>
        </div>
        <div class="card-body">
          <form>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="bmd-label-floating">Mã Camera</label>
                  <input type="text" class="form-control" ng-model="camera.idcamera" id="idcamera" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="bmd-label-floating">Trạng Thái</label>
                  <input type="text" class="form-control numberInput" ng-model="camera.status" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group" style="margin-top: 29px;">
                  <label class="bmd-label-floating">Ngày Lắp</label>
                  <input type="text" class="form-control" name="birthdate" id="birthdate" value=" " />
                </div>
              </div>
            </div>
